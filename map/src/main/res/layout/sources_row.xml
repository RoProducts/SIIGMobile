<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_height="35dip"
	android:layout_width="fill_parent" 
	android:gravity="center_vertical|left"
	android:paddingBottom="2dip" 
	android:paddingLeft="4dip" 
	android:longClickable="true" 
    android:background="@drawable/multiselect_list" 
	 >
    <ImageView 
        android:id="@+id/source_icon"
        android:contentDescription="@string/source_type"
        android:src="@drawable/ic_mapstore"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:paddingRight="3dip"
        />
     <TextView 
			android:id="@+id/name" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:layout_toRightOf="@id/source_icon"
		    android:layout_centerVertical="true" /> 
	<ImageButton 
			android:contentDescription="@string/details"
			android:id="@+id/details"
			android:src="@drawable/ic_navigation_next_item_gray"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/drawer_selectable_item" />

 
</RelativeLayout>
